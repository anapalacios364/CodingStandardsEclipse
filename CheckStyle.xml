<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "http://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
  <!-- Excluir ciertos archivos con suppressions.xml -->
  <module name="SuppressionFilter">
    <property name="file" value="suppressions.xml"/>
  </module>
  <module name="TreeWalker">
    <!-- Revisión de javadoc en métodos -->
    <module name="JavadocMethod"/>
    <!-- Convenciones para nombres de métodos -->
    <module name="MethodName">
      <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
    </module>
    <!-- Espacios en blanco después de , y ; -->
    <module name="WhitespaceAfter">
      <property name="tokens" value="COMMA, SEMI"/>
    </module>
  </module>
  <!-- Verificación de encabezado simple -->
  <module name="Header">
    <property name="header" value="// Copyright (C) 2025"/>
  </module>
</module>
